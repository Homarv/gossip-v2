<div class="container ">
<% @gossips.each do |gossip| %>
  <div class="container ">
   
      <div class="card-deck mb-3 text-center">
        <div class="card mb-4 box-shadow">
          <div class="card-header">
            <h4 class="my-0 font-weight-normal"><%= gossip.user.first_name %> <%= gossip.user.last_name %></h4>
          </div>
          <div class="card-body">
            
            <div class="list-unstyled mt-3 mb-4">
              <li> <%= gossip.title %></li>
            </div>
            <button type="button" class="btn btn-lg btn-block btn-dark"><%= link_to "Voir le potin", gossip_path(gossip.id) %> </button>
          </div>  
        </div>
    <%end%>

  </div>
</div>

